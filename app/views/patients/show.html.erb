<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @patient.name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @patient.last_name %>
</p>

<p>
  <strong>Date birth:</strong>
  <%= @patient.date_birth.strftime('%d-%m-%Y') unless @patient.date_birth.nil?  %>
</p>

<p>
  <strong>Age:</strong>
  <%= @patient.age %>
</p>

<p>
  <strong>Gender:</strong>
  <%= @patient.gender %>
</p>

<p>
  <strong>Main condition:</strong>
  <%= @patient.main_condition %>
</p>

<p>
  <strong>Location:</strong>
  <%= @patient.location %>
</p>

<p>
  <strong>Interviews:</strong>
   <ul>
  <% @patient.interviews.each do | interview | %>
  <li>
  <%= link_to interview.title, interview %> |
  <%= interview.date %>
  </li>
  <% end %>
</ul>
</p>

<%= link_to 'Edit', edit_patient_path(@patient) %> |
<%= link_to 'Back', patients_path %>
