<%= form_with(model: patient, local: true) do |form| %>
  <% if patient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(patient.errors.count, "error") %> prohibited this patient from being saved:</h2>

      <ul>
      <% patient.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :patient_name %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, id: :patient_last_name %>
  </div>

  <div class="field">
    <%= form.label :date_birth %>
    <%= form.date_field :date_birth, id: :patient_date_birth %>
  </div>

  <div class="field">
    <%= form.label :gender %>
    <%= form.text_field :gender, id: :patient_gender %>
  </div>

  <div class="field">
    <%= form.label :main_condition %>
    <%= select_tag(:main_condition, options_for_select([['Pannenkoekensyndroom', 1], ['Poffertjesziekte', 2],['Patatjesfobie', 3]])) %>
  </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location, id: :patient_location %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
