<%= form_with(model: patient, local: true) do |form| %>
  <% if patient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(patient.errors.count, "error") %> prohibited this patient from being saved:</h2>

      <ul>
      <% patient.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, id: :patient_name, :autocomplete => :off, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, id: :patient_last_name, :autocomplete => :off, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :date_birth %>
    <%= form.date_field :date_birth, id: :patient_date_birth, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :gender %>
    <%= form.select(:gender, ['Male', 'Female'], {}, {class: "form-control"}) %>
  </div>

  <div class="form-group">
    <%= form.label :location %>
    <%= form.text_field :location, id: :patient_location, class: "form-control"  %>
  </div>

<div class="form-group">
  <%= form.label :main_condition %>
  <%= form.select(:main_condition, ['Pannenkoekensyndroom', 'Poffertjesziekte', 'Patatjesfobie'], {}, {class: "form-control"}) %>
</div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
